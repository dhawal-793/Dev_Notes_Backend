{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint"],
    "ignorePatterns": ["**/build/*", "**/node_modules/*", "**/public/*"],
    "rules": {
        "indent": [4, "tab"],
        "no-tabs": 0
    }
}
