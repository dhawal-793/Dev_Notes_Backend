{
  "compilerOptions": {
    "target": "ES6", // ES6 for ESM support
    "module": "ESNext", // ESNext for ESM support
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true, // Enables interoperability with CommonJS modules
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
